            else:
                result = {"icon": "‚ÜîÔ∏è", "text": "Middle", "color": "#FF9800"}
        
        elif indicator == "Stochastic" or indicator == "MFI":
            try:
                if isinstance(value, str) and len(value.split()) > 0:
                    value = float(value.split()[0])
                else:
                    value = float(value)
                    
                if value >= 80:
                    result = {"icon": "‚ÜóÔ∏è", "text": "Overbought", "color": "#F44336"}
                elif value <= 20:
                    result = {"icon": "‚ÜòÔ∏è", "text": "Oversold", "color": "#4CAF50"}
                else:
                    result = {"icon": "‚ÜîÔ∏è", "text": "Neutral", "color": "#FF9800"}
            except:
                result = {"icon": "‚ÑπÔ∏è", "text": "Info", "color": "#1E88E5"}
        
        elif indicator == "ATR" or indicator == "Standard Deviation":
            # These are volatility indicators without direct signal interpretation
            result = {"icon": "‚ÑπÔ∏è", "text": "Info", "color": "#1E88E5"}
            
        elif "Trend" in indicator:
            # For trend indicators that contain text descriptions
            if "above" in str(value).lower():
                result = {"icon": "‚ÜóÔ∏è", "text": "Bullish", "color": "#4CAF50"}
            elif "below" in str(value).lower():
                result = {"icon": "‚ÜòÔ∏è", "text": "Bearish", "color": "#F44336"}
