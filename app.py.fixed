    result = {"icon": "", "text": "", "color": "#757575"}
    
    # Default case
    try:
        # Handle different indicators
        if indicator == "RSI":
            value = float(value)
            if value >= 70:
                result = {"icon": "‚ÜóÔ∏è", "text": "Overbought", "color": "#F44336"}
            elif value <= 30:
                result = {"icon": "‚ÜòÔ∏è", "text": "Oversold", "color": "#4CAF50"}
            else:
                result = {"icon": "‚ÜîÔ∏è", "text": "Neutral", "color": "#FF9800"}
        
        elif indicator == "MACD":
            if "bullish" in str(value).lower():
                result = {"icon": "‚ÜóÔ∏è", "text": "Bullish", "color": "#4CAF50"}
            elif "bearish" in str(value).lower():
